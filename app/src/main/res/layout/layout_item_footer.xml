<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/pll_layout_item_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_heightPercent="9%w">

        <ProgressBar
            android:id="@+id/pb_layout_item_footer_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminateDrawable="@drawable/anim_progress_loading"
            app:layout_heightPercent="7%w"
            app:layout_widthPercent="7%w"/>

        <TextView
            android:id="@+id/tv_layout_item_footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中..."
            app:layout_textSizePercent="3.89%w"/>

    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentFrameLayout>